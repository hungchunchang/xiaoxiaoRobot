<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下時的樣式 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_pressed" /> <!-- 按下時的背景色 -->
            <corners android:radius="8dp" /> <!-- 圓角效果 -->
        </shape>
    </item>
    <!-- 默認樣式 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_normal" /> <!-- 默認背景色 -->
            <corners android:radius="8dp" /> <!-- 圓角效果 -->
        </shape>
    </item>
</selector>
